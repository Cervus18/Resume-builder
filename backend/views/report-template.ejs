
<!DOCTYPE html>
<html>
    <head>
        
    <style>

@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;500;600;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700;800&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Titillium+Web:wght@300;400;600;700;900&display=swap');


*{
    margin:0;
    padding:0;
    box-sizing: border-box;
    font-family: <%= fontFamily %>,sans-serif;
    font-style: <%= fontStyle %>;

    
}

.frame{
    width:100%;
    height:100vh;
}

.banner{
    width: 100%;
    height:200px;    
    <% if(color.length>0){ %>
     background: <%= color %>;
    <% } else { %>
     background-image: url( <%="/img/"+ theme %>);
     background-repeat: no-repeat;
     background-size: 100%;
    <% } %>
    
   
}

.banner >div:nth-child(2){
    width:100%;
}

.frame-mail-phone{
    width:100%;
    display: flex;
    display: -webkit-box;
    padding:2rem;
    justify-content: space-between;
    -webkit-box-pack: justify;
    border-bottom: 1px solid #ccc;
    font-size: 1.3rem;

}

.frame-body{
    display: flex;
    display: -webkit-box;
    min-height: 1109px;
    align-items: stretch;
    
}
.frame-experiences>div {
  border-top: 1px solid #ccc;
  padding:.5rem
}
.frame-experiences> div:first-child {
 border: none;
}

.frame-body>div:first-child{
    /*flex:3;
    -webkit-flex:3;*/
    width:70%;
    padding:2rem
   
    
   }
   
.frame-body>div:first-child p{
    text-align: justify;
    line-height: 2.5rem;
    font-size: 1.3rem;
}

#frame-sidebar{
    /*flex:1;
    -webkit-flex:1;*/
    width:30%;
    background-color: #ececec;
    padding:.5rem
     
}

li{
    list-style: none;
    padding: .4rem .9rem;
    font-size: 1.5rem;
}

.frame-skills{
    width:100%;

  }

  
.side-title{
    padding:1rem 1rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid rgb(210, 210, 210);
  }
  
  .skill-item{
    font-size: 1.2rem;
    padding:.5rem 2rem;
    border:1px solid rgb(208, 208, 208);
    border-radius: 30px;
    margin-right: 1rem;
    margin-bottom: 1rem;
    display: inline-block;

  }
        </style>
    </head>
    <body>
        <div class='frame' style="font-family: fontFamily; font-style: fontStyle">
            <div class="banner" >
             <img  alt="" style="height:100%" src=<%= image %>/>
            </div>
            <div  >
              <div class='frame-mail-phone' style="display:flex;justify-content: space-between;">
                <% if(email!==""){ %>
                    <p><strong>Email:</strong> <%= email %> </p>
                <% } %>
                <% if(phone!==""){ %>
                    <p><strong>Phone:</strong> <%= phone %> </p>
                <% } %>
                
              </div>
            
              
              <div class="frame-body">
                <div>
                  <h1 style="margin-bottom:1rem"><%= name %></h1>
                  <p ><%= about %></p>
                    <div>
                    <h2 style="border-top:1px solid #ccc;padding:1.3rem .8rem;margin-top:2rem">Skills</h2>
                    <div class='frame-skills'>
                        <% for(var i=0; i<skills.length; i++) {%>
                            <span class='skill-item'><%= skills[i].skill %></span>
                         <% } %>
    
    
                    </div>
                    <% if(experiences.length!==0){ %>
                    <div>
                        <h2 style="border-top:1px solid #ccc;margin-top:.9rem;padding-top:.9rem;margin-bottom:.7rem">Experiences</h2>
                        <div class="frame-experiences">
                            <% for(var i=0; i<experiences.length; i++) {%>
                            <div>
                                <h3 style="margin-bottom:1rem" ><%= experiences[i].title %></h3>
                                <p style="font-size:1.3rem"><%= experiences[i].detail %></p>
                            </div> 
                          <% } %>
                        </div>
                
                    </div>
                    <% } %>
                    
                  
            
                </div>
                </div>
                 <div id="frame-sidebar" >
                    <div style="margin-bottom:1rem">
                        <% if(languages.length >0 ){ %>
                        <h2 class="side-title">Languages</h2>
                        <ul>
                        
                            <% for(var i=0; i<languages.length; i++) {%>
                                <li><%= languages[i].language %></li>
                             <% } %>
                        
                        </ul>
                        <%  } %>
                    </div>
                    <div style="margin-bottom:1rem">
                        <% if(hobbies.length >0 ){ %>
                        <h2 class="side-title">Hobbies</h2>
                        <ul>
                        
                            <% for(var i=0; i<hobbies.length; i++) {%>
                                <li><%= hobbies[i].hobby %></li>
                             <% } %>
                       
    
                        </ul>
                        <%  } %>
                    </div>
                 </div>
                
              </div>
            
            </div>
            
        </div>
    </body>
</html>